{
  "name": "express-api-template",
  "version": "0.0.0-development",
  "repository": "https://github.com/tobitenno/express-api-template-Oauth2.git",
  "license": "MIT",
  "scripts": {
    "start": "node src/server",
    "lint": "eslint src",
    "lint:fix": "eslint src/ --fix",
    "test": "nyc mocha",
    "dev": "nodemon",
    "build:openapi": "npx swagger-jsdoc -d src/scripts/swaggerDefinition.js src/app/controllers/*.js -o openapi.yaml",
    "lint:openapi": "npx @redocly/openapi-cli lint openapi.yaml",
    "preview:openapi": "npx @redocly/openapi-cli preview-docs openapi.yaml --config .redoclyrc"
  },
  "engines": {
    "node": ">= 18.0.0"
  },
  "dependencies": {
    "apicache": "^1.6.3",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "colors": "^1.4.0",
    "cors": "^2.7.1",
    "dotenv": "^16.4.4",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^7.1.5",
    "mongoose": "^8.1.3",
    "mongoose-unique-validator": "^5.0.0",
    "multer": "^1.4.4",
    "prom-client": "^10.2.3",
    "redoc-express": "^2.1.0",
    "serve-favicon": "^2.5.0",
    "swagger-stats": "^0.99.7",
    "winston": "^3.11.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.23.10",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-private-methods": "^7.18.6",
    "@babel/preset-env": "^7.23.9",
    "chai": "^4.4.1",
    "chai-http": "^4.4.0",
    "decache": "^4.6.2",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "mocha": "^10.3.0",
    "mongodb-memory-server": "^9.1.6",
    "nodemon": "^3.0.3",
    "nyc": "^15.1.0",
    "prettier": "^3.2.5"
  },
  "eslintConfig": {
    "extends": [
      "prettier",
      "airbnb-base"
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "sourceType": "script",
      "babelOptions": {
        "plugins": [
          "@babel/plugin-proposal-class-properties",
          "@babel/plugin-proposal-private-methods"
        ]
      }
    },
    "rules": {
      "valid-jsdoc": [
        "error",
        {
          "requireReturn": false,
          "requireReturnDescription": false,
          "preferType": {
            "String": "string",
            "Number": "number",
            "Boolean": "boolean",
            "Function": "function",
            "object": "Object",
            "date": "Date",
            "error": "Error"
          },
          "prefer": {
            "return": "returns"
          }
        }
      ],
      "no-underscore-dangle": "off",
      "strict": [
        "error",
        "safe"
      ],
      "linebreak-style": "off",
      "no-restricted-syntax": "off",
      "no-await-in-loop": "off",
      "global-require": "off",
      "no-fallthrough": "off",
      "no-param-reassign": "off",
      "no-case-declarations": "off",
      "no-nested-ternary": "off",
      "no-unused-expressions": "off"
    },
    "plugins": [
      "prettier"
    ]
  },
  "mocha": {
    "exit": true,
    "spec": "src/spec/**/*.spec.js",
    "require": [
      "src/spec/hooks/db.js"
    ],
    "enableSourceMaps": true,
    "enable-source-maps": true,
    "checkLeaks": true,
    "normal": 500,
    "slow": 2000,
    "fullTrace": true
  },
  "nodemonConfig": {
    "env": {
      "LOG_LEVEL": "debug",
      "SECRET_KEY": "obCltwRpN3Yn29i7Z8Y1sZwZlIR5MDm9",
      "INITIALIZATION_VECTOR": "254vi2tCl86fLtUL",
      "ENABLE_SWAGGER": true,
      "PORT": 3000
    },
    "ignore": [
      "src/spec/*.js"
    ]
  },
  "nyc": {
    "exclude": [
      "src/spec/**",
      "src/app/controllers/index.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "source-map": true,
    "sourceMap": true,
    "produce-source-map": true,
    "skip-full": true
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-private-methods"
    ]
  }
}
